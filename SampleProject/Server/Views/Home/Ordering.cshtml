@{
   ViewData["Title"] = "Ordering";
}

<!--  In Ordering method you can sort data by age  -->
<!DOCTYPE html>
<html lang="en">

<head>
   <meta charset="UTF-8">
   <meta http-equiv="X-UA-Compatible" content="IE=edge">
   <meta name="viewport" content="width=device-width, initial-scale=1.0">
</head>

<body>
   <!-- main -->
   <div>
      <div class="main">
         <div class="container-fluid">
            <div class="mt-3">
               <div class="row ml-2 mb-3">
                  <div class="col-md-4">
                     <button class="btn btn-info" id="ascending"> Ascending</button>
                  </div>
                  <div class="col-md-4">
                     <button class="btn btn-danger" id="descending">Descending</button>

                  </div>
                  <div class="col-md-4">
                     <button class="btn btn-dark" id="noneSort">
                        None Sort
                     </button>
                  </div>

               </div>

               <div class="query mt-5">
                  <p class="ml-3 query-text" id="queryParam"></p>
               </div>
               <div class="table-responsive">
                  <table class="table table-bordered mt-5">
                     <thead>
                        <tr>
                           <th scope="col">#</th>
                           <th scope="col">First Name</th>
                           <th scope="col">Last Name</th>
                           <th scope="col">Age</th>
                           <th scope="col">Phone Number</th>

                           <th scope="col">Address</th>
                        </tr>
                     </thead>
                     <tbody id=tableBody></tbody>
                  </table>
               </div>
            </div>
         </div>
      </div>
      <script src="~/js/Ordering.js"></script>
</body>
</html>